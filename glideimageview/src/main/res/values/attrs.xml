<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlideImageView">
        <attr name="placeholderSrc" format="reference|color" />
        <attr name="errorSrc" format="reference|color" />
        <attr name="diskCacheStrategy"  >
            <enum name="none" value="0"/>
            <enum name="all" value="1"/>
            <enum name="data" value="2"/>
            <enum name="resource" value="3"/>
            <enum name="automatic" value="4"/>
        </attr>
        <attr name="skipMemoryCache" format="boolean"/>
        <attr name="dontAnimate" format="boolean"/>
    </declare-styleable>
</resources>